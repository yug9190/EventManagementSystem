@{
    ViewData["Title"] = "Home Page";
}

<section class="text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-5 fw-semibold mb-2">Welcome to</h1>
        <h2 class="display-2 fw-bold text-primary mb-4">Event Management System</h2>
        <p class="lead text-secondary mb-5">Effortlessly log, organize, and manage your company’s events — all in one place!</p>

        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
            <a href="@Url.Action("Index", "Events")" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-calendar-event"></i> View Events
            </a>
            <a href="@Url.Action("Index", "Categories")" class="btn btn-outline-primary btn-lg px-4">
                <i class="bi bi-list-ul"></i> View Categories
            </a>
        </div>
    </div>
</section>

<!-- ✅ Event-themed Image Section -->
<section class="mt-5">
    <div class="container text-center">
        <img src="https://images.unsplash.com/photo-1521737711867-e3b97375f902?auto=format&fit=crop&w=1350&q=80"
             alt="People attending an event"
             class="img-fluid rounded shadow"
             style="max-height: 500px; width: 100%; object-fit: cover;" />
    </div>
</section>
