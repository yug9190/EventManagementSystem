@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Change this if you have a different layout
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Admin Dashboard</h3>
        </div>
        <div class="card-body">
            <p class="lead">👋 Welcome, Admin!</p>

            <div class="row">
                <!-- Manage Users -->
                <div class="col-md-4 mb-4">
                    <div class="card text-white bg-success h-100">
                        <div class="card-body">
                            <h5 class="card-title">Manage Users</h5>
                            <p class="card-text">View and manage all registered users.</p>
                            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-light btn-sm">Go</a>
                        </div>
                    </div>
                </div>

                <!-- Manage Events -->
                <div class="col-md-4 mb-4">
                    <div class="card text-white bg-info h-100">
                        <div class="card-body">
                            <h5 class="card-title">Manage Events</h5>
                            <p class="card-text">View and manage events created by organizers.</p>
                            <a href="@Url.Action("Index", "Events")" class="btn btn-light btn-sm">Go</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



