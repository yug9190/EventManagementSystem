@model EventManagementSystem.Models.EventCategory

@{
    ViewData["Title"] = "Edit Category";
}

<h2 class="text-center text-primary mb-4">Edit Category - @Model.CategoryName</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="CategoryId" />

            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PricePerHour" class="form-label">Price Per Hour (₹)</label>
                    <input asp-for="PricePerHour" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="PricePerHour" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PricePerDay" class="form-label">Price Per Day (₹)</label>
                    <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="PricePerDay" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="MaxCapacity" class="form-label">Maximum Capacity</label>
                <input asp-for="MaxCapacity" class="form-control" type="number" min="1" />
                <span asp-validation-for="MaxCapacity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label d-block">Is Active</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsActive" value="true" id="activeTrue" checked="@(Model.IsActive)" />
                    <label class="form-check-label" for="activeTrue">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="IsActive" value="false" id="activeFalse" checked="@(!Model.IsActive)" />
                    <label class="form-check-label" for="activeFalse">No</label>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-success">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
