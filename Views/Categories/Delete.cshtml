@model EventManagementSystem.Models.EventCategory

@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<h4>Are you sure you want to delete this category?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Category Name</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price Per Hour</dt>
        <dd class="col-sm-10">@Model.PricePerHour</dd>

        <dt class="col-sm-2">Price Per Day</dt>
        <dd class="col-sm-10">@Model.PricePerDay</dd>

        <dt class="col-sm-2">Is Active</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>

        <dt class="col-sm-2">Max Capacity</dt>
        <dd class="col-sm-10">@Model.MaxCapacity</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
